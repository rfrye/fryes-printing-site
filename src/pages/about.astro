  <!-- CTA -->
  <section class="py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-navy mb-4">Let's Work Together</h2>
      <p class="text-charcoal-light text-lg mb-8">
        Whether you're a longtime customer or reaching out for the first time, we'd love to hear from you.
      </p>
      <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 bg-terracotta text-white font-semibold rounded-lg hover:bg-terracotta-light transition-colors text-lg">
        Get in Touch
      </a>
    </div>
  </section>
</BaseLayout>
