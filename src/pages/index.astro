---
import BaseLayout from '../../layouts/BaseLayout.astro';

const services = [
  {
    title: 'Offset Printing',
    href: '/services/offset',
    description: 'High-volume lithographic printing delivering exceptional color accuracy, consistency, and value for large runs.',
    items: ['Brochures & Catalogs', 'Stationery & Letterhead', 'Marketing Materials', 'Packaging & Labels'],
  },
  {
    title: 'Digital Printing',
    href: '/services/digital',
    description: 'Fast-turnaround, cost-effective printing for short to medium runs with no minimum quantities.',
    items: ['Variable Data Printing', 'Short-Run Brochures', 'Personalized Pieces', 'Quick-Turn Projects'],
  },
  {
    title: 'Wide Format',
    href: '/services/wide-format',
    description: 'Large-scale printing for banners, posters, signage, and displays — indoor and outdoor.',
    items: ['Banners & Flags', 'Trade Show Displays', 'Posters & Prints', 'Window & Wall Graphics'],
  },
  {
    title: 'Bindery & Finishing',
    href: '/services/finishing',
    description: 'Complete post-press services to give your printed piece the perfect finish.',
    items: ['Cutting & Trimming', 'Folding & Scoring', 'Binding & Stitching', 'Laminating & Coating'],
  },
  {
    title: 'Specialty Work',
    href: '/services/specialty',
    description: 'Hot foil stamping, embossing, and die cutting on our three in-house Kluge presses — premium finishes most shops outsource.',
    items: ['Hot Foil Stamping', 'Embossing & Debossing', 'Die Cutting', 'Custom Shapes'],
  },
  {
    title: 'Mailing Services',
    href: '/services/mailing',
    description: 'Print it, address it, mail it — all from one shop. Direct mail, custom envelopes, and bulk mailing.',
    items: ['Envelope Addressing', 'Custom Envelopes', 'Direct Mail Campaigns', 'Bulk Mail Prep'],
  },
];
---

<BaseLayout title="Services — Frye's Printing" description="Full-service commercial printing: offset, digital, wide format, and finishing. Everything in-house at Frye's Printing in Napa Valley.">
  <!-- Page Header -->
  <section class="bg-navy text-white py-16 lg:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-gold font-semibold text-sm uppercase tracking-wider mb-3">What We Do</p>
      <h1 class="text-4xl sm:text-5xl font-extrabold">Our Services</h1>
      <p class="text-white/70 text-lg mt-4 max-w-2xl">
        From prepress to finishing, we handle every step in-house. That means better quality control, faster turnaround, and one point of contact for your entire project.
      </p>
    </div>
  </section>

  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-8">
        {services.map((service) => (
          <a href={service.href} class="group block bg-warm-gray rounded-xl p-8 lg:p-10 hover:bg-warm-gray-dark transition-colors">
            <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6">
              <div class="flex-1">
                <h2 class="text-2xl font-bold text-navy group-hover:text-gold transition-colors mb-3">
                  {service.title}
                </h2>
                <p class="text-charcoal-light leading-relaxed text-lg">
                  {service.description}
                </p>
              </div>
              <div class="lg:w-64 shrink-0">
                <ul class="space-y-1.5">
                  {service.items.map((item) => (
                    <li class="flex items-center gap-2 text-sm text-charcoal-light">
                      <svg class="w-4 h-4 text-gold shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                      {item}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-warm-gray">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-navy mb-4">Not Sure What You Need?</h2>
      <p class="text-charcoal-light text-lg mb-8">
        Tell us about your project and we'll help you figure out the best approach.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/quote" class="inline-flex items-center justify-center px-8 py-4 bg-terracotta text-white font-semibold rounded-lg hover:bg-terracotta-light transition-colors text-lg">
          Request a Quote
        </a>
        <a href="tel:707-253-1114" class="inline-flex items-center justify-center px-8 py-4 border-2 border-navy text-navy font-semibold rounded-lg hover:bg-navy hover:text-white transition-colors text-lg">
          Call (707) 253-1114
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
