---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us — Frye's Printing" description="Get in touch with Frye's Printing in Napa Valley. Call, email, or visit us at 1050 Lincoln Ave, Napa, CA.">
  <!-- Page Header -->
  <section class="bg-navy text-white py-16 lg:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-gold font-semibold text-sm uppercase tracking-wider mb-3">Get in Touch</p>
      <h1 class="text-4xl sm:text-5xl font-extrabold">Contact Us</h1>
    </div>
  </section>

  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold text-navy mb-6">Send Us a Message</h2>
          <form name="contact" method="POST" data-netlify="true" class="space-y-5">
            <input type="hidden" name="form-name" value="contact" />

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
              <div>
                <label for="name" class="block text-sm font-medium text-charcoal mb-1.5">Name *</label>
                <input type="text" id="name" name="name" required
                  class="w-full px-4 py-3 border border-warm-gray-dark rounded-lg focus:outline-none focus:ring-2 focus:ring-gold/50 focus:border-gold transition-colors" />
              </div>
              <div>
                <label for="phone" class="block text-sm font-medium text-charcoal mb-1.5">Phone</label>
                <input type="tel" id="phone" name="phone"
                  class="w-full px-4 py-3 border border-warm-gray-dark rounded-lg focus:outline-none focus:ring-2 focus:ring-gold/50 focus:border-gold transition-colors" />
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-charcoal mb-1.5">Email *</label>
              <input type="email" id="email" name="email" required
                class="w-full px-4 py-3 border border-warm-gray-dark rounded-lg focus:outline-none focus:ring-2 focus:ring-gold/50 focus:border-gold transition-colors" />
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-charcoal mb-1.5">What can we help with?</label>
              <select id="subject" name="subject"
                class="w-full px-4 py-3 border border-warm-gray-dark rounded-lg focus:outline-none focus:ring-2 focus:ring-gold/50 focus:border-gold transition-colors bg-white">
                <option value="">Select a topic...</option>
                <option value="general">General Inquiry</option>
                <option value="quote">Request a Quote</option>
                <option value="existing-job">Existing Job Question</option>
                <option value="files">File / Artwork Question</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-charcoal mb-1.5">Message *</label>
              <textarea id="message" name="message" rows="5" required
                class="w-full px-4 py-3 border border-warm-gray-dark rounded-lg focus:outline-none focus:ring-2 focus:ring-gold/50 focus:border-gold transition-colors resize-y"></textarea>
            </div>

            <button type="submit"
              class="w-full sm:w-auto px-8 py-3.5 bg-terracotta text-white font-semibold rounded-lg hover:bg-terracotta-light transition-colors">
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Info & Map -->
        <div>
          <h2 class="text-2xl font-bold text-navy mb-6">Visit Us</h2>

          <div class="space-y-6 mb-8">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-gold/10 rounded-lg flex items-center justify-center shrink-0 mt-0.5">
                <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
              </div>
              <div>
                <p class="font-semibold text-navy">Address</p>
                <p class="text-charcoal-light">1050 Lincoln Ave<br>Napa, CA 94558</p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-gold/10 rounded-lg flex items-center justify-center shrink-0 mt-0.5">
                <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
              </div>
              <div>
                <p class="font-semibold text-navy">Phone</p>
                <a href="tel:707-253-1114" class="text-charcoal-light hover:text-terracotta transition-colors">(707) 253-1114</a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-gold/10 rounded-lg flex items-center justify-center shrink-0 mt-0.5">
                <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              </div>
              <div>
                <p class="font-semibold text-navy">Email</p>
                <a href="mailto:info@fryesprinting.com" class="text-charcoal-light hover:text-terracotta transition-colors">info@fryesprinting.com</a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-gold/10 rounded-lg flex items-center justify-center shrink-0 mt-0.5">
                <svg class="w-5 h-5 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
              </div>
              <div>
                <p class="font-semibold text-navy">Hours</p>
                <p class="text-charcoal-light">Monday – Friday<br>8:30 AM – 5:00 PM</p>
              </div>
            </div>
          </div>

          <!-- Map -->
          <div class="rounded-xl overflow-hidden border border-warm-gray-dark">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3115.5!2d-122.286!3d38.299!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2s1050+Lincoln+Ave+Napa+CA!5e0!3m2!1sen!2sus!4v1"
              width="100%"
              height="300"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Frye's Printing location"
            ></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
